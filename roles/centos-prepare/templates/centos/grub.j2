GRUB_TERMINAL_OUTPUT="console"
GRUB_CMDLINE_LINUX="crashkernel=auto rd.lvm.lv=cl/root rd.lvm.lv=cl/swap intel_iommu=on iommu=pt hugepagesz=1G hugepages=20 transparent_hugepage=never"
